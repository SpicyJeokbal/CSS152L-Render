    <!-- CAROUSEL SCRIPT -->
    <script>
        const carousel = document.querySelector('.carousel-container');
        const items = document.querySelectorAll('.carousel-item');
        const dots = document.querySelectorAll('.carousel-dot');
        let currentIndex = 0;
        let isAnimating = false;

        function updateCarousel() {
            if (isAnimating) return;
            isAnimating = true;

            items.forEach((item, index) => {
                item.classList.remove('active');
                if (index === currentIndex) {
                    item.style.left = '50%';
                    setTimeout(() => item.classList.add('active'), 50);
                } else if (index === (currentIndex + 1) % items.length) {
                    item.style.left = '150%';
                } else {
                    item.style.left = '-50%';
                }
            });

            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentIndex);
            });

            setTimeout(() => {
                isAnimating = false;
            }, 800); 
        }

        function nextSlide() {
            if (isAnimating) return;
            currentIndex = (currentIndex + 1) % items.length;
            updateCarousel();
        }

        // Auto-advance slides every 3 seconds
        setInterval(nextSlide, 3000);

        // Click handlers for dots
        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                if (isAnimating || currentIndex === index) return;
                currentIndex = index;
                updateCarousel();
            });
        });

        // Initial setup
        updateCarousel();

        // SCROLL-TRIGGERED ANIMATIONS FOR ABOUT SECTION
        const aboutSection = document.getElementById('about-section');
        const aboutElements = document.querySelectorAll('.about-element');
        let aboutAnimationTriggered = false;

        // Intersection Observer to detect when about section enters viewport
        const observerOptions = {
            root: null,
            rootMargin: '-20% 0px -20% 0px', 
            threshold: 0
        };

        const aboutObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !aboutAnimationTriggered) {
                    aboutAnimationTriggered = true;
                    
                    aboutElements.forEach(element => {
                        element.classList.add('animate');
                    });
                }
            });
        }, observerOptions);

        aboutObserver.observe(aboutSection);

        let scrollTimeout;
        window.addEventListener('scroll', () => {
            clearTimeout(scrollTimeout);
            scrollTimeout = setTimeout(() => {
                if (!aboutAnimationTriggered) {
                    const aboutRect = aboutSection.getBoundingClientRect();
                    const windowHeight = window.innerHeight;
                    
                    if (aboutRect.top < windowHeight * 0.8 && aboutRect.bottom > windowHeight * 0.2) {
                        aboutAnimationTriggered = true;
                        
                        aboutElements.forEach(element => {
                            element.classList.add('animate');
                        });
                    }
                }
            }, 10);
        });

        const scrollToTopBtn = document.getElementById('scrollToTopBtn');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 200) {
                scrollToTopBtn.classList.add('visible');
            } else {
                scrollToTopBtn.classList.remove('visible');
            }
        });
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>

    <script>
      document.getElementById('checkoutForm').onsubmit = async function(e) {
        e.preventDefault();
        const form = e.target;
        const data = {
          name: form.name.value,
          email: form.email.value,
          address: form.address.value,
          city: form.city.value,
          province: form.province.value,
          postal: form.postal.value,
          cardNumber: form.cardNumber.value,
          expiry: form.expiry.value,
          cvc: form.cvc.value,
          cart: [{ name: 'Sample Item', quantity: 1, subtotal: 100 }] // Placeholder cart
        };
        document.getElementById('checkoutMsg').textContent = 'Processing...';
        try {
          const res = await fetch('http://127.0.0.1:3000/api/payment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });
          const result = await res.json();
          if(res.ok) {
            document.getElementById('checkoutMsg').textContent = 'Payment successful!';
          } else {
            document.getElementById('checkoutMsg').textContent = result.error || 'Payment failed.';
          }
        } catch (err) {
          document.getElementById('checkoutMsg').textContent = 'Network error.';
        }
      }
    </script>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const aboutUsLink = document.getElementById('about-us-link');
        if (aboutUsLink) {
          aboutUsLink.addEventListener('click', function(e) {
            // Check if already on the main page (sample.html)
            if (window.location.pathname.includes('sample.html')) {
              e.preventDefault();
              const aboutSection = document.getElementById('about-section');
              if (aboutSection) {
                aboutSection.scrollIntoView({ behavior: 'smooth' });
              }
            }
            // If not on main page, let the link work as normal
          });
        }
      });
    </script>

    
